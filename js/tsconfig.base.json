{
  "files": [],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@blockchain/common": ["src/packages/Common/dist"]
    }
  },
  "exclude": ["**/.*/", "**/build", "**/dist", "node_modules"]
}