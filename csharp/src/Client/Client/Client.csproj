<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<AssemblyName>Train.Solver.Client</AssemblyName>
		<RootNamespace>Train.Solver.Client</RootNamespace>
	</PropertyGroup>

	<PropertyGroup>
		<TrainUrl Condition="'$(ApiEnvironment)' == 'dev'">train.dev.lb.layerswap.cloud</TrainUrl>
		<TrainUrl Condition="'$(ApiEnvironment)' == 'prod'">train.lb.layerswap.io</TrainUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="NSwag.MSBuild" Version="14.4.0">
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
	</ItemGroup>

	<Target Name="NSwagGenerate" BeforeTargets="BeforeBuild">
		<Exec Command="$(NSwagExe_Net90) run $(ProjectDir)client.nswag /variables:TrainUrl=$(TrainUrl)" />
	</Target>

</Project>
